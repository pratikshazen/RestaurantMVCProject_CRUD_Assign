@model AssignMVCRestaurantCRUD.Models.RestaurantTab
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Restaurant</h2>


<form action="/Home/Edit/@Model.Id" method="post">
    <div class="form-row">
        <div class="form-group col-md-10">
            <label for="Name">Name</label>
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="text" class="form-control" id="Name" placeholder="Name....." value="@Model.Name"/>
        </div>

        <div class="form-group col-md-10">
            <label for="Type">Type</label>
            @*<input type="text" class="form-control" id="Type" placeholder="Type....." value="@Model.Type" />*@
            <select class="form-control" id="Type" name="Type">
                {
                <option value="">Select Cuisine</option>
                <option value="Indian">Indian</option>
                <option value="Italian">Italian</option>
                <option value="French">French</option>
                }
            </select>

        </div>


    </div>
    <button type="submit" class="btn btn-success">Edit Restaurant</button>
    <a class="btn btn-dark" href="/Home/index">Cancel</a>
</form>
