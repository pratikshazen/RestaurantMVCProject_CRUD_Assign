@model IEnumerable<AssignMVCRestaurantCRUD.Models.RestaurantTab>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Restaurant List</h2>
<br />
<a href="/Home/Create" class="btn btn-outline-secondary" style="background-color:darkorange">Add Restaurant</a>
<br />

<form class="form-inline" action="/home/index">
    <label for="search">Search:</label>
    <input type="text" style="border-left-color:darkorchid" form-control" id="search" name="search" placeholder="search" value="@ViewBag.Search"/>
 
    
    <button class="btn btn-primary">Go</button>
</form>
<table class="table" style="background-color:lightgray" border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Type</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td><a href="/Home/Details/@item.Id">@item.Id</a></td>
            <td>@item.Name</td>
            <td>@item.Type</td>

            <td><a href="/Home/Edit/@item.Id" class="btn btn-primary">Edit</a> </td>
            <td><a href="/Home/Delete/@item.Id" class="btn btn-danger">Delete</a></td>
        
        </tr>
    }

</table>